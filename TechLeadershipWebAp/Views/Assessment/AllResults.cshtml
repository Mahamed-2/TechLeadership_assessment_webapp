 @model List<TechLeadershipWebApp.Models.TestResult>
@{
    ViewData["Title"] = "All Assessment Results";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">All Assessment Results</h2>
                    <div>
                        <a href="@Url.Action("Index", "Assessment")" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Back to Assessment
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Success"]
                        </div>
                    }
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <p class="mb-0">Total Results: <strong>@Model.Count</strong></p>
                            <form action="@Url.Action("DeleteAllResults", "Assessment")" method="post" 
                                  onsubmit="return confirm('Are you sure you want to delete ALL @Model.Count results? This action cannot be undone.');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash me-1"></i>Delete All Results
                                </button>
                            </form>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Technical</th>
                                        <th>Team</th>
                                        <th>Architect</th>
                                        <th>Mentor</th>
                                        <th>Project Mgr</th>
                                        <th>Total</th>
                                        <th>Dominant Type</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in Model)
                                    {
                                        <tr>
                                            <td><strong>@result.ParticipantId</strong></td>
                                            <td>@result.ParticipantName</td>
                                            <td><span class="badge bg-info">@result.TechnicalLeadScore/3</span></td>
                                            <td><span class="badge bg-info">@result.TeamLeadScore/3</span></td>
                                            <td><span class="badge bg-info">@result.ArchitectScore/3</span></td>
                                            <td><span class="badge bg-info">@result.MentorScore/3</span></td>
                                            <td><span class="badge bg-info">@result.ProjectManagerScore/3</span></td>
                                            <td><span class="badge bg-success">@result.TotalScore/15</span></td>
                                            <td><span class="badge bg-warning">@result.DominantLeadershipType</span></td>
                                            <td>@result.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("Result", "Assessment", new { id = result.ParticipantId })" 
                                                       class="btn btn-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <form action="@Url.Action("DeleteResult", "Assessment")" method="post" 
                                                          onsubmit="return confirm('Are you sure you want to delete the result for @result.ParticipantName?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@result.ParticipantId" />
                                                        <button type="submit" class="btn btn-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <h4>No assessment results found.</h4>
                            <p>Be the first to take the leadership assessment!</p>
                            <a href="@Url.Action("Index", "Assessment")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Take Assessment
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>