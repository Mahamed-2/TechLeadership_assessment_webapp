@model List<TechLeadershipWebApp.Models.Question>
@{
    ViewData["Title"] = "Tech Leadership Assessment";
    var currentLanguage = ViewBag.CurrentLanguage as string ?? "en";
    var isEnglish = ViewBag.IsEnglish as bool? ?? true;
    var isSwedish = ViewBag.IsSwedish as bool? ?? false;
}

<div class="container">
    <!-- Language Selection Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-language me-2"></i>Select Language / Välj Språk</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group w-100" role="group">
                        <a href="@Url.Action("Index", new { language = "en" })" 
                           class="btn @(isEnglish ? "btn-primary" : "btn-outline-primary")">
                            <i class="fas fa-flag-usa me-2"></i>English
                        </a>
                        <a href="@Url.Action("Index", new { language = "sv" })" 
                           class="btn @(isSwedish ? "btn-primary" : "btn-outline-primary")">
                            <i class="fas fa-flag-sweden me-2"></i>Svenska
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h1 class="text-center mb-4">
        @(isEnglish ? "Tech Leadership Assessment" : "Tekniskt Ledarskapsbedömning")
    </h1>
    
    <p class="lead text-center">
        @(isEnglish 
            ? "Discover your ideal leadership role in fullstack development" 
            : "Upptäck din ideala ledarroll inom fullstack-utveckling")
    </p>

    <div class="alert alert-info">
        <h6><i class="fas fa-info-circle me-2"></i>
            @(isEnglish ? "Assessment Information" : "Bedömningsinformation")
        </h6>
        <p class="mb-0">
            @(isEnglish
                ? "This comprehensive assessment contains 5 questions testing 5 leadership dimensions. Each question presents realistic scenarios you might encounter as a fullstack development leader."
                : "Denna omfattande bedömning innehåller 5 frågor som testar 5 ledarskapsdimensioner. Varje fråga presenterar realistiska scenarier du kan stöta på som fullstack-utvecklingsledare.")
        </p>
    </div>

    <!-- Rest of your form remains the same -->
    <form action="@Url.Action("Submit", "Assessment")" method="post" class="needs-validation" novalidate id="assessmentForm">
        @Html.AntiForgeryToken()
        
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    @(isEnglish ? "Participant Information" : "Deltagarinformation")
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="ParticipantName" class="form-label">
                        @(isEnglish ? "Your Name *" : "Ditt Namn *")
                    </label>
                    <input type="text" class="form-control" id="ParticipantName" name="ParticipantName" required>
                    <div class="invalid-feedback">
                        @(isEnglish ? "Please enter your name." : "Vänligen ange ditt namn.")
                    </div>
                </div>
            </div>
        </div>
        
        @for (int i = 0; i < Model.Count; i++)
        {
            var question = Model[i];
            <div class="card mb-4 question-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        @(isEnglish ? $"Question {i + 1} of {Model.Count}" : $"Fråga {i + 1} av {Model.Count}")
                    </h5>
                </div>
                <div class="card-body">
                    <h6 class="card-title text-primary">@question.Text</h6>
                    
                    <div class="alternatives-container">
                        @foreach (var alternative in question.Alternatives)
                        {
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" 
                                       name="Answers[@question.Id]" 
                                       id="alt_@alternative.Id" 
                                       value="@alternative.Id" required>
                                <label class="form-check-label" for="alt_@alternative.Id">
                                    @alternative.Text
                                </label>
                                <div class="invalid-feedback">
                                    @(isEnglish 
                                        ? "Please select an answer for this question." 
                                        : "Vänligen välj ett svar på denna fråga.")
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                <i class="fas fa-paper-plane me-2"></i>
                @(isEnglish ? "Submit Assessment" : "Skicka Bedömning")
            </button>
        </div>
    </form>
</div>

<!-- Rest of your scripts remain the same -->